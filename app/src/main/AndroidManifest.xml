<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobilefs.seminar.pdfs.service">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="mfs.ui.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mfs.ui.JoinGroupActivity"
            android:label="@string/title_activity_join_group"
            android:parentActivityName="mfs.ui.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfs.ui.HomeActivity" />
        </activity>
        <activity
            android:name="mfs.ui.CreateGroupActivity"
            android:label="@string/title_activity_create_group"
            android:parentActivityName="mfs.ui.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfs.ui.HomeActivity" />
        </activity>

        <service
            android:name="mfs.service.BackgroundService"
            android:enabled="false"
            android:exported="false"></service>
    </application>

</manifest>