<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/file_item_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/TextAppearance.AppCompat.Headline"
        android:paddingLeft="@dimen/textView_padding"
        android:paddingTop="@dimen/textView_padding"
        android:text="Default"/>

    <TextView
        android:id="@+id/file_item_type_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/file_item_name_textView"
        style="@style/TextAppearance.AppCompat.Small"
        android:paddingRight="@dimen/textView_padding"
        android:text="Default"/>

</RelativeLayout>
